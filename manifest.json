{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "version": "2.0.3",
    "default_locale": "en",
    "description": "__MSG_extension_description__",
    "homepage_url": "https://github.com/ParkJeongseop/AuthAutoFill",
    "author": "__MSG_developer__",
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_title": "__MSG_extension_name__",
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "js": [
                "autofill.js"
            ],
            "matches": [
                "https://safe.ok-name.co.kr/CommonSvl",
                "https://pcc.siren24.com/pcc_V3/passWebV2/*",
                "https://nice.checkplus.co.kr/CheckPlusSafeModel/*",
                "https://www.mobile-ok.com/QRPASS",
                "https://www.kmcert.com/kmcis/*",
                "https://cert.kcp.co.kr/cert/*",
                "https://nid.naver.com/user2/help/authMobile*",
                "https://wauth.teledit.com/*",
                "https://www.gov.kr/*",
                "https://easysign.anyid.go.kr/esign/",
                "https://efamily.scourt.go.kr/*",
                "https://www.efine.go.kr/login/loginUser.do",
                "https://www.egroup.go.kr/egps/ps/io/lgn/loginScrin.do",
                "https://www.icl.go.kr/*",
                "https://minwon.moj.go.kr/*",
                "https://www.kosaf.go.kr/*",
                "https://www.epost.go.kr/usr/login/cafzc008k01.jsp",
                "https://www.epeople.go.kr/nep/crtf/simpleCrtfPopup15.npaid"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}